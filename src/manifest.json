{
  "manifest_version": 3,
  "name": "No More YouTube Shorts Please",
  "version": "1.0",
  "description": "A Chrome extension that blocks YouTube shorts from appearing on your YouTube homepage.",
  "background": {
    "service_worker": "assets/background.js"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "permissions": ["tabs", "scripting", "activeTab"]
}
